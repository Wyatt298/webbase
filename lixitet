    <div id="lixi-container"></div>

    <script>
        let opened = false;

        // Function to generate a random amount of money
        function getRandomAmount() {
            const min = 100000;
            const max = 1000000;
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        // Function to handle gift opening
        function openGift(index) {
            if (opened) {
                alert("Bạn chỉ được mở một bao lì xì!");
                return;
            }

            const randomAmount = getRandomAmount();
            const giftElement = document.getElementById(`gift-${index}`);
            giftElement.innerHTML = `
                <h3>Lì Xì 2026</h3>
                <p>Chúc mừng bạn nhận được:</p>
                <p class="money">${randomAmount.toLocaleString()} VND</p>
            `;
            document.getElementById('qr-image').src = 'https://image.voh.com.vn/voh/image/2024/12/30/meme-co-muon-li-xi-lhong-voh-185348.jpg'; // Replace with your QR code URL
            opened = true;  // Disable further interactions
            resetGifts();
        }

        // Function to reset the gifts after a gift is opened
        function resetGifts() {
            setTimeout(() => {
                const gifts = document.querySelectorAll('.gift');
                gifts.forEach((gift, index) => {
                    if (gift.innerHTML.indexOf('Chúc mừng bạn nhận được:') === -1) {
                        gift.innerHTML = `
                            <h3>Lì Xì 2026</h3>
                            <p>Chọn Bao</p>
                        `;
                    }
                });
                opened = false;  // Re-enable the game after a reset
            }, 3000);  // Reset gifts after 3 seconds
        }

        // Create random fireworks in the background
        setInterval(() => {
            const firework = document.createElement('div');
            firework.classList.add('firework');
            document.body.appendChild(firework);
            setTimeout(() => {
                firework.remove();
            }, 2000); // Remove the firework after it disappears
        }, 1000); // Create a firework every 1 second

        // Lì Xì falling effect
        (function () {
            const container = document.getElementById('lixi-container');
            if (!container) return;

            function createLixi() {
                const lixi = document.createElement('div');
                lixi.className = 'lixi';

                const size = Math.random() * 6 + 12;
                const duration = Math.random() * 3 + 4;

                lixi.style.left = Math.random() * 100 + '%';
                lixi.style.width = size + 'px';
                lixi.style.height = size * 1.4 + 'px';
                lixi.style.animationDuration = duration + 's';
                lixi.style.opacity = Math.random() * 0.4 + 0.5;

                container.appendChild(lixi);

                setTimeout(() => {
                    lixi.remove();
                }, (duration + 1) * 1000);
            }

            setInterval(createLixi, 260);

            for (let i = 0; i < 12; i++) {
                setTimeout(createLixi, i * 120);
            }
        })();
    </script>
